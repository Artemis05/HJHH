.getloc{
  display:flex;
  flex-direction: row;
  padding-right: 50rpx;
  color:gray;
}

.getloc image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 5rpx;
}

.upload-img{
  margin-top: 50rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: row;
}

.upload-img image{
  padding-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

.img-container{
  margin-left: 50rpx;
}

.images{
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
}

.bottom-button1{
  background-color: #932525;
  color: white;
  width: 80%;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
}

.select_box {
  background: #fff;
  width: 400rpx;
  /* margin: 0 auto; */
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  /* border: 1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.select_text {
  font-size: 1rem;
  flex: 1;
  color: gray;
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 10rpx;
}


.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 50rpx;
  font-size: 1rem;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}